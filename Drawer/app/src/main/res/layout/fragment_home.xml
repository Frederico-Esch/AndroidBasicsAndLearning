<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/frag_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP Home"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/frag_home_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/frag_home_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example 1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/frag_home_text3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_home_text"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/frag_home_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Info yet"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_home_text2"
        android:paddingTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>